{
  "name": "@dcilke/sanity-actions",
  "version": "1.0.0",
  "description": "GitHub Actions for building and deploying Sanity.io projects",
  "keywords": [
    "sanity",
    "github-actions",
    "deployment",
    "ci-cd",
    "studio",
    "graphql"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dcilke/sanity-actions.git"
  },
  "license": "MIT",
  "author": "dcilke",
  "type": "module",
  "main": "scripts/index.js",
  "scripts": {
    "action": "node scripts/index.js",
    "format": "prettier --check ./**/*.js",
    "format:fix": "prettier --write ./**/*.js",
    "lint": "eslint ./**/*.js",
    "lint:fix": "eslint ./**/*.js --fix",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",
    "test:integration": "./tests/run-all.sh",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "validate": "npm run lint && npm run format:check && npm test"
  },
  "jest": {
    "collectCoverageFrom": [
      "scripts/**/*.js",
      "!scripts/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "transform": {}
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "commander": "^11.1.0",
    "execa": "^8.0.1",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@sanity/prettier-config": "^2.0.0",
    "@types/jest": "^29.5.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-sanity": "^7.0.0",
    "eslint-plugin-jest": "^28.14.0",
    "jest": "^29.5.0",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
